<Window x:Class="MindmapApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký MindmapApp"
        WindowStartupLocation="CenterOwner"
        Width="520"
        Height="620"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.2" ShadowDepth="0" />
        </Grid.Effect>
        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="24" Padding="32">
            <StackPanel>
                <TextBlock Text="Tạo tài khoản mới" FontSize="26" FontWeight="Bold" />
                <TextBlock Text="Khám phá kho thư viện mindmap thông minh" Foreground="#FF7A869A" Margin="0,6,0,24" />
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Email" FontWeight="SemiBold"  Foreground="#333" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderBrush="#D0D5DD" BorderThickness="1" Background="#FAFBFC"/>
                </StackPanel>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Tên hiển thị" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderBrush="#D0D5DD" BorderThickness="1" Background="#FAFBFC"/>
                </StackPanel>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,8,0,0" Padding="8" BorderBrush="#D0D5DD" BorderThickness="1" Background="#FAFBFC"/>
                </StackPanel>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Nhập lại mật khẩu" FontWeight="SemiBold" />
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,8,0,0" Padding="8" BorderBrush="#D0D5DD" BorderThickness="1" Background="#FAFBFC"/>
                </StackPanel>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerBrush}" Margin="0,16,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding SuccessMessage}" Foreground="{StaticResource PrimaryBrush}" Margin="0,4,0,0" TextWrapping="Wrap" />
                <Button Content="Đăng ký" Margin="0,10,0,0" Click="RegisterButton_OnClick" Height="34"/>
                <Button Content="Quay lại đăng nhập" Margin="0,12,0,0" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Click="BackButton_OnClick" Height="34" />
            </StackPanel>
        </Border>
    </Grid>
</Window>